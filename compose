version: '3'
services:
  postgresql:
    image: docker.io/bitnami/postgresql:11
    container_name: postgresql
    restart: always
    environment:
      # ALLOW_EMPTY_PASSWORD is recommended only for development.
      - ALLOW_EMPTY_PASSWORD=yes
      - POSTGRESQL_USERNAME=bn_keycloak
      - POSTGRESQL_DATABASE=bitnami_keycloak
      - KEYCLOAK_DATABASE_HOST=postgresql
      - KEYCLOAK_DATABASE_PORT=5432
      - KEYCLOAK_DATABASE_NAME=bitnami_keycloak
      - KEYCLOAK_DATABASE_USER=bn_keycloak
      - KEYCLOAK_DATABASE_PASSWORD=ps_keycloak
      - KEYCLOAK_DATABASE_SCHEMA=public
 
    volumes:
      - 'postgresql_data:/bitnami/postgresql'
    # networks:
    #   - network01

  keycloak:
    image: docker.io/bitnami/keycloak:16
    container_name: keycloak
    depends_on:
      - postgresql
    ports:
      - "80:8080"
    # networks:
    #   - network01
    environment:
      - KC_HOSTNAME_STRICT_BACKCHANNEL=true
      - KC_HTTP_HOST=keycloak-test.mparagon.pl
      - KEYCLOAK_CREATE_ADMIN_USER=true
      - KEYCLOAK_ADMIN_USER=user
      - KEYCLOAK_ADMIN_PASSWORD=bitnami
      - KEYCLOAK_MANAGEMENT_USER=manager
      - KEYCLOAK_MANAGEMENT_PASSWOR=bitnami1
      - KEYCLOAK_ENABLE_TLS=true
      - KEYCLOAK_TLS_KEYSTORE_FILE=/opt/bitnami/keycloak/certs/keystore.jks
      - KEYCLOAK_TLS_TRUSTSTORE_FILE=/opt/bitnami/keycloak/certs/truststore.jks
      - KEYCLOAK_TLS_KEYSTORE_PASSWORD=bitnami21
      - KEYCLOAK_TLS_TRUSTSTORE_PASSWORD=bitnami2155
      - KEYCLOAK_HTTP_PORT=8080
      - KEYCLOAK_HTTPS_PORT=8443
      - KEYCLOAK_BIND_ADDRESS=0.0.0.0
    volumes:
      - ./certs:/opt/bitnami/keycloak/certs:ro


volumes:
  postgresql_data:
    driver: local
# networks:
#   network01:
#     driver: bridge


bin/kc.sh start --https-certificate-file=/opt/bitnami/keycloak/certs/wildcard.mparagon.pl.pem --https-certificate-key-file=opt/bitnami/keycloak/certswildcard.mparagon.pl.key


Authorize url 
http://10.55.1.100/auth/realms/test-rea/.well-known/openid-configuration
